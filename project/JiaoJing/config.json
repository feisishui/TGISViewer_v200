          },
          "visualVariables": [
            {
              "type": "colorInfo",
              "field": "指数",
              "minDataValue": 8.6,
              "maxDataValue": 35,
              "colors": [
                [0, 255, 0, 100],
                [255, 255, 0, 180],
                [255, 0, 0, 255]
              ]
            },
            {
              "type": "opacityInfo",
              "field": "指数",
              "minDataValue": 8.6,
              "maxDataValue": 35,
              "opacityValues": [0.5, 1]
            }
          ]
        }

      }
    ],
    "mapOptions": {
      "logo": false,
      "nav": false,
      "slider": false
    }
  },
  "geometryService": "http://{gisServer}/arcgis/rest/services/Utilities/Geometry/GeometryServer",
