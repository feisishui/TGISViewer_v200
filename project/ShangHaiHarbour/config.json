{
  "theme": {
    "name": "BillboardTheme",
    "styles": [
      "default",
      "blue",
      "purple",
      "turquoise",
      "green",
      "orange",
      "red",
      "pink"
    ],
    "version": "2.4"
  },
  "map": {
    "3D": false,
    "2D": true,
    "position": {
      "left": 0,
      "top": 0,
      "right": 0,
      "bottom": 0
    },
    "basemaps": [
      {
        "label": "矢量图",
        "url": "http://128.64.151.245:6080/arcgis/rest/services/ShangHai/ShangHai_base/MapServer",
        "type": "tiled",
        "visible": true
      }
    ],
    "operationallayers": [
      {
        "label": "发布段",
        "url": "http://{gisServer}/arcgis/rest/services/ShangHaiHarbour/KuaiSuLu_fbd/MapServer",
        "type": "dynamic",
        "visible": false
      },
      {
        "label": "摄像机",
        "url": "http://{gisServer}/arcgis/rest/services/ShangHaiHarbour/KuaiSuLu_device/MapServer/1",
        "type": "feature",
        "visible": false,
        "outFields": [
          "*"
        ],
        "infoTemplate": {
          "title": "${DEVICEDESC}",
          "content": "<b>位置: </b>${ROADNAME}<br><b>编号: </b>${DEVICEID}"
        },
        "renderer": {
          "type": "simple",
          "symbol": {
            "type": "esriPMS",
            "url": "images/mapIcons/icon_camera_blue.png",
            "width": 24,
            "height": 32,
            "yoffset": 16
          }
        }
      },
      {
        "label": "情报板",
        "url": "http://{gisServer}/arcgis/rest/services/ShangHaiHarbour/KuaiSuLu_device/MapServer/3",
        "type": "feature",
        "visible": false,
        "outFields": [
          "*"
        ],
        "infoTemplate": {
          "title": "${DEVICEDESC}",
          "content": "<b>位置: </b>${ROADNAME}<br><b>编号: </b>${DEVICEID}"
        },
        "renderer": {
          "type": "simple",
          "symbol": {
            "type": "esriPMS",
            "url": "images/mapIcons/icon_qbb_blue.png",
            "width": 24,
            "height": 32,
            "yoffset": 16
          }
        }
      },
      {
        "label": "东南环情报板",
        "url": "http://{gisServer}/arcgis/rest/services/ShangHaiHarbour/KuaiSuLu_device/MapServer/4",
        "type": "feature",
        "visible": false,
        "outFields": [
          "*"
        ],
        "infoTemplate": {
          "title": "${DEVICEDESC}",
          "content": "<b>位置: </b>${ROADNAME}<br><b>编号: </b>${DEVICEID}"
        },
        "renderer": {
          "type": "simple",
          "symbol": {
            "type": "esriPMS",
            "url": "images/mapIcons/icon_qbb_blue.png",
            "width": 24,
            "height": 32,
            "yoffset": 16
          }
        }
      }
    ],
    "mapOptions": {
      "center": [121.469, 31.228],
      "zoom": 13,
      "logo": false,
      "nav": false,
      "slider": false
    }
  },
  "geometryService": "http://{gisServer}/arcgis/rest/services/Utilities/Geometry/GeometryServer",
  "gisServer": "172.30.30.1:6080",
  "widgetOnScreen": {
    "widgets": [
      {
        "uri": "widgets/Coordinate/Widget",
        "position": {
          "left": 15,
          "bottom": 5,
          "relativeTo": "map"
        },
        "version": "2.4",
        "id": "CoordinateWidget"
      },
      {
        "uri": "widgets/OverviewMap/Widget",
        "position": {
          "right": 0,
          "bottom": 0,
          "relativeTo": "map"
        },
        "version": "2.4",
        "id": "OverviewMapWidget"
      },
      {
        "uri": "widgets/TopToolbar_CircleButton/Widget",
        "name": "TopToolbar",
        "position": {
          "top": 30,
          "right": 50
        },
        "id": "TopToolbarWidget"
      },
      {
        "uri": "widgets/BottomToolbar_CircleButton/Widget",
        "name": "BottomToolbar",
        "config": "configs/BottomToolbar/config_ShangHaiHarbour.json",
        "position": {
          "bottom": 10,
          "width": "100%",
          "left":0,
          "right":0
        },
        "id": "BottomToolbarWidget"
      },
      {
        "uri": "widgets/Draw/Widget",
        "version": "2.4",
        "name": "Draw",
        "config": "configs/Draw/config.json",
        "position": {
          "left": 15,
          "top": 190,
          "relativeTo": "map"
        },
        "id": "DrawWidget"
      },
      {
        "uri": "widgets/Print/Widget",
        "version": "2.4",
        "id": "PrintWidget"
      }
    ]
  }
}